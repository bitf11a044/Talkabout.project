    <script type="text/javascript">
        $(document).ready(function () {
            $(".fancybox").fancybox();
            var menu = $("#menuSection");
            menu.hide();
            $("#search").keypress(function () {
                var search = $("#search").val();
                if (search == "")
                    menu.hide();
            
                $.getJSON("/Post/Search_post?post=" + search, function (data) {

                    if (data == null) {
                    }
                    else {
                        menu.empty();
                        $.each(data, function (i, item) {
                            menu.append("FName: " + item.category);
                        });
                        menu.show();
                    }
                });
            });
            
        });
    </script>

